            <script>
                function showSolidHeart(){
                    document.getElementById("openheart").style.display="none";
                    document.getElementById("solidheart").style.display="inline";
                }
                function showOpenHeart(){
                    document.getElementById("solidheart").style.display="none";
                    document.getElementById("openheart").style.display="inline";
                }
                function showSolidAngry(){
                    document.getElementById("openangry").style.display="none";
                    document.getElementById("solidangry").style.display="inline";
                }
                function showOpenAngry(){
                    document.getElementById("solidangry").style.display="none";
                    document.getElementById("openangry").style.display="inline";
                }
