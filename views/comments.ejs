            <div class="8u" id="content" >
                
                <article id="main">  
                    <div class="card" style="padding-left:1%;padding-right:1%;margin-bottom:1%;background-color: #000000">
                        <div style="padding:1%">
                            <section class="special">  
                                <h3 style="color: #ffffff;">Add Comment</h3>           
                                <form action="/restaurants/<%=foundRestaurant.id%>/reviews/<%=foundReview.id%>" method="POST">
                                    <div class="d-flex flex-row align-items-start">
                                        <!-- <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40"> -->
                                        <textarea type="text" class="form-control ml-1 shadow-none textarea" name="text" required></textarea>
                                    </div>                                    
                                    <div class="mt-2 text-right">
                                        <ul >                                        
                                        <li style="display:inline;"><button class="btn btn-primary btn-sm shadow-none" type="submit">Post comment</button></li>
                                        <li style="display:inline;"><button class="btn btn-outline-primary btn-sm ml-1 shadow-none" type="button">Cancel</button></li>
                                        </ul>
                                    </div>
                                </form>
                            </section>
                        </div>                                                                       
                    </div>   
                    <% foundReview.comments.slice().reverse().forEach(function(comment){%>               
                    <div style="padding-left:1%;padding-right:1%;margin-bottom:1%">
                        <div style="padding:1%">
                            <section class="special">                
                                <h3 style="color: #ff6600;font-size:90%;display: inline;"><a href="location2.html"><%=comment.author.username%></a></h3>
                                <h6 style="display: inline;float:right"><%=comment.time1%></h6>                                
                                <p style="color: #ffffff;"><%=comment.text%></p>
                            </section>
                        </div>
                    </div>
                    <%})%>
                    
